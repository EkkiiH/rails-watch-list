<h1>All movies lists</h1>

<div class="container m-3 pe-5 option-list d-flex ">

  <div class="d-flex flex-wrap justify-content-center flex-grow-1">
    <% @lists.each do |list| %>
      <div class="card card-category m-3" style="width: 44%;">
        <%= image_tag "https://source.unsplash.com/random/?#{list.name}",
            class: 'card-img',
            style: 'width:100%;height:14rem;object-fit:cover;object-position:center;'%>
        <div class="card-img-overlay d-flex justify-content-center">
          <h3 class="card-title link-white d-flex align-self-center">
            <%= link_to list.name,
                list_path(list),
                class: 'text-decoration-none' %>
          </h3>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Create new list", new_list_path, class: "btn btn-success button align-self-start ms-auto text-nowrap" %>

</div>
