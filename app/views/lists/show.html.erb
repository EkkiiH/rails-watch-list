<h1><%= @list.name %></h1>


<%= link_to "Add a review", new_list_bookmark_path(@list), class: 'btn btn-success'  %>

<div class="container">
  <% @bookmarks.each do |bookmark| %>
    <div class="card m-3" style="width:300px;">
      <%= image_tag bookmark.movie.poster_url, style: 'height:200px;'%>
      <p><%= bookmark.movie.title %></p>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.comment %></p>
      <p><%= link_to "Delete",
            bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} ,
            class: 'btn btn-danger' %></p>
    </div>
  <% end %>
</div>


<%= link_to "Back to main", lists_path, {class: 'btn btn-primary'} %>
